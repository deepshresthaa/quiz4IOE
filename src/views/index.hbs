  <style>
    .logo {
      font-family: 'Times New Roman', Times, serif;
      font-size: 1.5rem;
      font-weight: bold;
      color: #8a0728; /* Classic dark gray color */
    }
    .container-fluid{
        padding:0px 30px 0px 30px;
    }

    * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fc;
            color: #333;
            line-height: 1.6;
            padding: 20px;
        }

        header {
            background-color: #2a3d72;
            color: #fff;
            padding: 20px;
            text-align: center;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        header h1 {
            font-size: 3rem;
            margin-bottom: 10px;
        }

        header p {
            font-size: 1.2rem;
        }

        .content {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 40px;
        }

        .content h2 {
            color: #2a3d72;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        .content p {
            font-size: 1.1rem;
            margin-bottom: 20px;
            line-height: 1.8;
        }

        .cta-btn {
            background-color: #fe6d73;
            color: #fff;
            padding: 15px 30px;
            font-size: 1.2rem;
            text-decoration: none;
            border-radius: 5px;
            display: inline-block;
            transition: all 0.3s ease;
            margin-top: 20px;
        }

        .cta-btn:hover {
            background-color: #ff4b51;
            transform: scale(1.05);
        }

        .footer {
            background-color: #2a3d72;
            color: #fff;
            padding: 20px;
            text-align: center;
            border-radius: 10px;
        }

        .footer p {
            font-size: 1rem;
        }

        .footer a {
            color: #ff8e45;
            text-decoration: none;
            font-weight: bold;
        }

        .footer a:hover {
            color: #ff5a0f;
        }

        .highlight {
            color: #fe6d73;
            font-weight: bold;
        }

        .stats {
            font-size: 1.1rem;
            margin-top: 20px;
            text-align: center;
        }

        .stats span {
            font-weight: bold;
            color: #2a3d72;
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            header h1 {
                font-size: 2.5rem;
            }

            header p {
                font-size: 1rem;
            }

            .content {
                padding: 20px;
            }

            .cta-btn {
                padding: 10px 20px;
                font-size: 1rem;
            }
        }
  </style>
